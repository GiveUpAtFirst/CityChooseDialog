<resources>
    <!--Dialog样式-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/noback</item>
    </style>
    <style name="address_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/noback</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!--Dialog弹出和消失动画效果-->
    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_translate</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_translate</item>
    </style>
    <style name="line">
        <item name="android:background">@color/line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>
</resources>
